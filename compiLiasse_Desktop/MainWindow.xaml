<Window x:Class="compiLiasse_Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:compiLiasse_Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="TxBoMessage" HorizontalAlignment="Center" Margin="0,83,0,0" Text="Select a message option and click display" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <RadioButton x:Name="RdBtHello" Content="Hello" HorizontalAlignment="Left" Margin="269,163,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="RdBtGoodBye" Content="Goodbye" HorizontalAlignment="Left" Margin="465,163,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnDisplay" Content="Display" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Click="BtnDisplay_Click"/>

    </Grid>
</Window>
